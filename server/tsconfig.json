{
	"compilerOptions": {
		"module": "ES2022",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "ES2021",
		"sourceMap": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"baseUrl": "./node_modules",
		"moduleResolution": "node",
		"incremental": true,
		"types": ["node"],
		"esModuleInterop": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "test"]
}
