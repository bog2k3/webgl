{
	"compilerOptions": {
		"module": "ES2022",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "ES2021",
		"sourceMap": true,
		"outDir": "./build",
		"rootDir": "./src",
		"baseUrl": "./node_modules",
		"moduleResolution": "node",
		"incremental": true,
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
